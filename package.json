{
    "name": "crom-encantaria",
    "version": "1.0.0",
    "private": true,
    "description": "Magic Royale - Crom Encantaria Monorepo",
    "workspaces": [
        "client",
        "server"
    ],
    "scripts": {
        "bootstrap": "npm install --workspaces",
        "dev:server": "npm run dev -w server",
        "dev:client": "npm run dev -w client",
        "dev": "npx concurrently -n \"SERVER,CLIENT\" -c \"magenta,cyan\" \"npm run dev:server\" \"npm run dev:client\"",
        "build": "npm run build --workspaces"
    },
    "devDependencies": {
        "concurrently": "^9.0.0"
    }
}